<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button

        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="240dp"
        android:drawableBottom="@drawable/knx"
        android:drawablePadding="4dp"
        android:text="KNX sistema"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#618AA7"/>

    <Button
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="340dp"
        android:drawableBottom="@drawable/junglogo"
        android:drawablePadding="4dp"
        android:text="JUNG Home sistema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="0dp"
        android:backgroundTint="#618AA7"
        />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/jung" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:shadowColor="#A6A6A6"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="6"
            android:text="Sistemų pasiūlymai pagal jūsų pasirinkimą"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button4"
        android:layout_width="413dp"
        android:layout_height="60dp"
        android:layout_marginTop="680dp"
        android:text="IŠSAUGOTI INFORMACIJĄ PDF FAILO FORMATU"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#618AA7"
        />

    <Button

        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="440dp"
        android:drawableBottom="@drawable/enet"
        android:drawablePadding="4dp"
        android:text="eNet Smart Home sistema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="0dp"
        android:backgroundTint="#618AA7"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jung" />

    <TextView
        android:id="@+id/aprasymas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:gravity="center"
        android:shadowColor="#A6A6A6"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:text="Šios sistemos labiausiai tinka pagal jūsų pasirinktus kritejus:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="540dp"
        android:text="LB MANAGEMENT sistema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="0dp"
        android:backgroundTint="#618AA7"

        />
</androidx.constraintlayout.widget.ConstraintLayout>