<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <Button
                android:id="@+id/btnKnxsistema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="KNX valdymo sistema"
                android:backgroundTint="@color/darkblue"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/premium_tekstas" />

            <Button
                android:id="@+id/btnJunghome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="JUNG Home"
                android:backgroundTint="@color/darkblue"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/komforto_tekstas" />

            <Button
                android:id="@+id/btnEnetsmarthome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="eNet Smart Home"
                android:backgroundTint="@color/darkblue"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pagrindo_tekstas" />

            <View
                android:id="@+id/linija2"
                android:layout_width="304dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEnetsmarthome" />

            <View
                android:id="@+id/linija3"
                android:layout_width="304dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnJunghome" />

            <ImageView
                android:id="@+id/jung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/jung" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="346dp"
                android:layout_height="81dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="Kategorijos, bei jų informacija"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jung" />

            <ImageView
                android:id="@+id/logos"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.522"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                app:srcCompat="@drawable/keli_logos" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="377dp"
                android:layout_height="63dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="Kad būtų lengivau orientuotis, JUNG suskirstė savo sistemas į keturias kategorijas"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logos" />

            <Button
                android:id="@+id/btnLbmanagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:shadowColor="#A6A6A6"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6"
                android:text="LB-Management"
                android:backgroundTint="@color/darkblue"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <View
                android:id="@+id/linija1"
                android:layout_width="294dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLbmanagement" />

            <TextView
                android:id="@+id/pagrindo_tekstas"
                android:layout_width="355dp"
                android:layout_height="219dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="LB-Management yra inovatyvi apšvietimo intensyvumo ir žaliuzių valdymo sistema, kuri naudoja „Clever Config“ programėlę. Ši programėlė leidžia valdyti apšvietimą ir žaliuzes privačiuose statiniuose per išmanųjį telefoną naudojant „Bluetooth Low Energy“ ryšį. Programėlė taip pat suteikia patogumą ir efektyvumą, leisdama nustatyti įvairius parametrus, tokius kaip išjungimo vėlinimas ir šviesumas."
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linija1" />

            <TextView
                android:id="@+id/komforto_tekstas"
                android:layout_width="348dp"
                android:layout_height="253dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Ši sistema suteikia daug komforto ir saugumo namuose bei biuruose, įskaitant renovuojamus pastatus. Naudojant „eNet“ radijo bangomis valdomą sistemą ir „eNet SMART HOME“ programėlę, galima patogiai valdyti pastato funkcijas per išmanųjį telefoną, tiek vietiniu, tiek nuotoliniu būdu. Sistema lengvai įdiegiama, konfigūruojama, ir leidžia sujungti įvairių gamintojų prietaisus į vientisą tinklą. Taip pat palaiko valdymą balsu per „Amazon Alexa“ ir „Google Assistant“."
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linija2" />

            <TextView
                android:id="@+id/premium_tekstas"
                android:layout_width="342dp"
                android:layout_height="290dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="JUNG HOME prietaisai naudoja „Bluetooth® SIG Mesh“ tinklą užtikrinti saugų duomenų perdavimą. Tai leidžia jiems veikti kaip siųstuvai ir imtuvai, perduodant komandas tinkle iki tikslo, net už tiesioginės ryšio aprėpties ribų. Ši lanksti sistema gali būti lengvai plėtojama per išmanųjį telefoną ir JUNG HOME programėlę. Integracija su „WORKS WITH mediola®“ atveria galimybes valdyti buities prietaisus balsu per „Amazon Alexa“ arba „Google Assistant“, taip pat internetu. Tai suteikia vartotojams daugybę galimybių valdyti namų elektroniką patogiai ir efektyviai."
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linija3" />

            <View
                android:id="@+id/linija4"
                android:layout_width="304dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKnxsistema" />

            <TextView
                android:id="@+id/auksciausios_klases_tekstas"
                android:layout_width="330dp"
                android:layout_height="216dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="KNX yra pasaulinis namų ir pastatų valdymo standartas, naudojamas daugybėje šalių. Ši sistema sujungia visas namo valdymo sritis - nuo apšvietimo iki temperatūros ir žaliuzių. Ji leidžia automatizuoti namo sistemas ir reguliuoti pagal iš anksto nustatytus algoritmus, tačiau sprendimas apie išmaniuosius namus turėtų būti priimamas jau pastato projektavimo etape."
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linija4"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/NyptukasAtgal"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/backarrow" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>